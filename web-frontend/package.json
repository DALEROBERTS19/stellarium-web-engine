{
  "name": "stellarium-web",
  "version": "0.1.0",
  "description": "Stellarium Web is an online planetarium that lets you discover the night sky. It's easy to use and beautiful.",
  "author": "Fabien Chereau <fabien.chereau@gmail.com>",
  "private": true,
  "scripts": {
    "dev": "vue-cli-service serve",
    "build": "CDN_ENV=${CDN_ENV} vue-cli-service build",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "@mdi/font": "^3.6.95",
    "core-js": "^2.6.5",
    "leaflet": "^1.5.1",
    "leaflet-control-geocoder": "^1.9.0",
    "moment": "^2.24.0",
    "roboto-fontface": "*",
    "vue": "^2.6.10",
    "vue-click-outside": "^1.0.7",
    "vue-cookie": "^1.1.4",
    "vue-fullscreen": "^2.1.5",
    "vue-jsonp": "^0.1.8",
    "vue-router": "^3.0.3",
    "vue2-leaflet": "^2.2.1",
    "vuetify": "^2.0.0",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.11.0",
    "@vue/cli-plugin-eslint": "^3.11.0",
    "@vue/cli-service": "^3.11.0",
    "@vue/eslint-config-standard": "^4.0.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "sass": "^1.17.4",
    "sass-loader": "^7.1.0",
    "vue-cli-plugin-vuetify": "^0.6.3",
    "vue-template-compiler": "^2.6.10",
    "vuetify-loader": "^1.2.2"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/standard"
    ],
    "rules": {
      "vue/no-parsing-error": [2, { "x-invalid-end-tag": false }]
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "eslintIgnore": [
    "/build/",
    "/dist/",
    "/*.js",
    "src/assets/js/*.js"
  ],
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "workspaces": [
    "src/plugins/*"
  ],
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
